{%extends '::layout.html.twig'%}
{%block title%}
{{parent()}}
| Statut de dossier
{%endblock%}
{%block position %}
          <li >
          	<a href="{{url('trc_admin_statut_dossier')}} ">
          		<i class="fa-legal fa" ></i>
          		Statut de dossier
          	</a>
          </li>
{%endblock position%}
{%block titrepage%}
    Statut de dossier
{%endblock titrepage%}     
{%block content%}

	<div class="row">
		<div class="col-lg-12">
			<div class="box box-success">
				<div class="box-header with-border">
					<h3 class="box-title">
					{{pagination.getTotalItemCount}}	statut(s) 
					</h3>
				</div>			           
			  	<div class="box-body">
			  		<div class="row">

						<div class="col-md-4">
							{{form_start(form)}}
								<div class="form-group">
									<label>
										Code
									</label>
									{{form_widget(form.code,{'attr':{'class':'form-control'}})}}
								</div>
								<div class="form-group">
									<label>
										Nom
									</label>
									{{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
								</div>
							{{form_end(form)}}
						</div>
						<div class="col-md-7">
							{%if pagination.getTotalItemCount > 0 %}
								<table class="table">
									<thead>
										<tr>
											<th>Code</th>
											<th>Nom</th>
										</tr>
									</thead>
									<tbody>
										{%for s in pagination %}
											<tr>
												<td>{{s.code}} </td>
												<td>{{s.nom}} </td>
											</tr>
										{%endfor%}
									</tbody>
								</table>
							{%endif%}
						</div>
					</div>
			  	</div>
			</div>
		</div>
	</div>
	

{%endblock content%}

{%block script%}
<script type="text/javascript">
    activeLink("Statut-sna")
</script>
{%endblock script%}