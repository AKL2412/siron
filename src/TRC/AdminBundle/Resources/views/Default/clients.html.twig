{%block content%}
<div class="row">
    <div class="col-md-5 col-md-offset-2-">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Ajouter un client</h3>
              <div class="box-tools pull-right">
              <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
          
            {{form_start(form)}}
           
              <div class="box-body">
                  
                	<div class="form-group">
                      <label for="exampleInputEmail1">Radical </label>
                      
                      {{form_widget(form.radical,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Nom </label>
                      
                      {{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Prenoms</label>
                      
                      {{form_widget(form.prenom,{'attr':{'class':'form-control'}})}}
                    </div>
                    
                  
                
                
              
              <!-- /.box-body -->

              <div class="box-footer">
                {{form_widget(form.save,{'attr':{'class':'btn btn-primary'}})}}
              </div>
            {{form_end(form)}}
          </div>


        </div>
</div>
   <div class="col-md-7">
    <div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Les clients</h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
      </button>
      <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
      </div>
  </div>
           
  <div class="box-body">
  <div>
    <table class="table table-striped table-bordered">
      <tr>
      <th>Radical</th>
        <th>{{ knp_pagination_sortable(pagination, 'Nom', 'a.nom') }}</th>
        <th>Prenom</th>
      
      </tr>
        {% for article in pagination %}
          <tr>
            
            <td> 
             
              
              
              <a href="{{url('trc_admin_clients_modif',{id:article.id})}} ">
                <i class="fa-edit fa"></i>
              </a>
              {{ article.radical }} 
              </td>
               <td>{{ article.nom  }}</td>
            <td>{{ article.prenom  }}</td>
          </tr>
        {% endfor %}
    </table>
    <div class="navigation">
      {{ knp_pagination_render(pagination) }}
    </div>
  </div>
  <div class="box-footer text-center">
    {{ pagination.getTotalItemCount }} clients 
  </div>
</div>
  </div>     
</div>
