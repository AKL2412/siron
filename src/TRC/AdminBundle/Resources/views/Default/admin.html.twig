{%extends 'TRCAdminBundle::Default/employes.html.twig'%}
{%block title%}
{{parent()}}
| Ajouter un Employé
{%endblock%}
{%block titrepage%}
    Les Employés
{%endblock titrepage%}
{%block position %}
  {{parent()}}
    <li>
        <a href="{{url('trc_admin_ajoututil')}}">
            <i class="fa fa-user-plus"></i> Employé
        </a>
    </li>
{%endblock position%}
{%block content%}

<div class="row">
		<div class="col-md-10 col-md-offset-1">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Ajouter un Employé</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
          
            {{form_start(form)}}
       
              <div class="box-body">

                <div class="row">
                  <div class="col-md-4">
                    <label for="trc_corebundle_utilisateur_image" >
                      <img id="img-update" src="{{asset(form.vars.value.image)}} " style="display:inline-block;width:100%;">
                    </label>
                    {{form_widget(form.image,{'attr':{'class':'hide load-image'}})}}
                    </div>
                  <div class="col-md-8">
                    <div class="row">
                      
                  
                    <div class="form-group col-md-6">
                      <label for="exampleInputEmail1">Civilité</label>
                      
                      {{form_widget(form.civilite,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group col-md-6">
                      <label for="exampleInputEmail1">Matricule</label>
                      
                      {{form_widget(form.matricule,{'attr':{'class':'form-control','data-inputmask':'"mask": "0999"','data-mask':'' }})}}
                    </div>
                    </div>
                    <div class="row">
                    <div class="form-group col-md-4">
                      <label for="exampleInputEmail1">Nom</label>
                      
                      {{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group col-md-8">
                      <label for="exampleInputPassword1">Prenom</label>
                      {{form_widget(form.prenom,{'attr':{'class':'form-control'}})}}
                    </div>
                    </div>
                    <div class="row">
                    <div class="form-group col-md-8">
                      <label for="exampleInputPassword1">Email</label>
                      <div class="input-group">
                      <!-- <div class="input-group-addon">
                        <i class="fa fa-at"></i>
                      </div> -->
                      {{form_widget(form.email,{'attr':{'class':'form-control'}})}}
                      <div class="input-group-addon">
                        <i class="fa fa-at"></i>banqueatlantique.net
                      </div>
                      </div>
                    </div>
                    <div class="form-group col-md-4">
                      <label for="exampleInputPassword1">Adresse IP</label>
                      <div class="input-group">
                      <div class="input-group-addon">
                        <i class="fa fa-phone"></i>
                      </div>
                      {{form_widget(form.ip,{'attr':{'class':'form-control','data-inputmask':'"mask": "8 9999"','data-mask':'' }})}}
                      </div>
                    </div>
                    </div>

                    <div class="row">
                      <div class="form-group col-md-6">
                      <label for="exampleInputPassword1">Flotte</label>
                      <div class="input-group">
                      <div class="input-group-addon">
                        <i class="fa fa-mobile"></i>
                      </div>
                      {{form_widget(form.flotte,{'attr':{'class':'form-control','data-inputmask':'"mask": "+(999) 99 999 99 99"','data-mask':'' }})}}
                      </div>
                    </div>
                    <div class="form-group col-md-6">
                      <label for="exampleInputPassword1">Téléphone</label>
                      <div class="input-group">
                      <div class="input-group-addon">
                        <i class="fa fa-mobile"></i>
                      </div>
                      {{form_widget(form.telephone,{'attr':{'class':'form-control','data-inputmask':'"mask": "+(999) 99 999 99 99"','data-mask':'' }})}}
                      </div>
                    </div>

                    </div>

                    <div class="row">
                      <div class="form-group col-md-6">
                      <label for="exampleInputPassword1">Ligne directe</label>
                      <div class="input-group">
                      <div class="input-group-addon">
                        <i class="fa fa-phone"></i>
                      </div>
                      {{form_widget(form.lignedirecte,{'attr':{'class':'form-control','data-inputmask':'"mask": "99 999 99 99"','data-mask':'' }})}}
                      </div>
                    </div>
                    <div class="form-group col-md-6">
                      <label for="exampleInputPassword1">Numéro de fax</label>
                      <div class="input-group">
                      <div class="input-group-addon">
                        <i class="fa fa-fax"></i>
                      </div>
                      {{form_widget(form.fax,{'attr':{'class':'form-control','data-inputmask':'"mask": "99 999 99 99"','data-mask':'' }})}}
                      </div>
                    </div>

                    </div>
                    <div class="row">
                      <div class="form-group col-md-6">
                      <label>
                        Publier {{form_widget(form.active)}}
                      </label>
                      </div>
                      <div class="form-group col-md-6">
                      <label>
                        Supprimer: {{form_widget(form.trash)}}
                      </label>
                      </div>
                      </div>
                 
                    {%if is_granted('ROLE_ADMIN') and form.vars.value.compte is null%}
                    <div class="form-group">
                      <label for="exampleInputPassword1">Type d'Utilisateur</label>
                      
                      
                      <select name="applications[]" class="form-control select2" multiple="multiple">
                        <option value="ROLE_TROMB">Administrateur</option>
                      </select>
                     
                    </div>
                    {%endif%}
                    


                  </div>
                  </div>
                </div>
                
              <!-- /.box-body -->

              <div class="box-footer">
                {{form_widget(form.save,{'attr':{'class':'btn btn-primary'}})}}
              </div>
           	{{form_end(form)}}
          </div>


        </div>
       
</div>
{%endblock%}

{%block script%}
<script type="text/javascript">
	activeLink("ajout-utilisateur");
  $(document).ready(function(){
    $('#trc_corebundle_societe_image').change(updateImage)
  });
</script>
{%endblock script%}