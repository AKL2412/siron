{%extends 'TRCAdminBundle::Default/employes.html.twig'%}
{%block title%}
{{parent()}}
| Ajouter un Employé
{%endblock%}
{%block titrepage%}
    Les Employés
{%endblock titrepage%}
{%block position %}
  {{parent()}}
    <li>
        <a href="{{url('trc_admin_ajoututil')}}">
            <i class="fa fa-user-plus"></i> Employé
        </a>
    </li>
{%endblock position%}
{%block content%}

<div class="row">
		<div class="col-md-10 col-md-offset-1">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Ajouter un Employé</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
          
            {{form_start(form)}}
       
              <div class="box-body">

                <div class="row">
                  
                  <div class="col-md-12">
                    
                    <div class="row">
                    <div class="form-group col-md-5">
                      <label for="exampleInputEmail1">Nom</label>
                      
                      {{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group col-md-7">
                      <label for="exampleInputPassword1">Prenom</label>
                      {{form_widget(form.prenom,{'attr':{'class':'form-control'}})}}
                    </div>
                    </div>
                    <div class="row">
                    <div class="form-group col-md-8">
                      <label for="exampleInputPassword1">Email</label>
                      <div class="input-group">
                      
                      <div class="input-group-addon">
                        <i class="fa fa-at"></i>
                      </div>
                      {{form_widget(form.email,{'attr':{'class':'form-control'}})}}
                      </div>
                    </div>
                    
                    </div>
                    <div class="row">
                    <div class="form-group col-md-6">
                      <label for="exampleInputPassword1">Entité</label>
                      
                      
                      {{form_widget(form.entite,{'attr':{'class':'form-control select2'}})}}
                     
                    </div>
                    <div class="form-group col-md-6">
                      <label for="exampleInputPassword1">Profil</label>
                      
                      
                      {{form_widget(form.profil,{'attr':{'class':'form-control select2'}})}}
                     
                    </div>
                    
                    </div>

                    
                    


                  </div>
                  </div>
                </div>
                
              <!-- /.box-body -->

              <div class="box-footer">
                {{form_widget(form.save,{'attr':{'class':'btn btn-primary'}})}}
              </div>
           	{{form_end(form)}}
          </div>


        </div>
       
</div>
{%endblock%}

{%block script%}
<script type="text/javascript">
	activeLink("ajout-utilisateur");
  $(document).ready(function(){
    $('#trc_corebundle_societe_image').change(updateImage)
  });
</script>
{%endblock script%}