{%extends 'TRCSDCBundle::Default/employes.html.twig'%}
{%block title%}
{{parent()}}
| Ajout d'employé
{%endblock%}
{%block titrepage%}
    Ajout d'employé
{%endblock titrepage%}
{%block position %}
  {{parent()}}
    <li>
        <a href="#">
            <i class="fa fa-plus"></i> Ajout d'employé
        </a>
    </li>
{%endblock position%}
{%block content%}

<div class="row">
		<div class="col-md-8 col-md-offset-2">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Ajouter un employé</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
          
            {{form_start(form)}}
            <form role="form">
              <div class="box-body">

                <div class="row">
                  <div class="col-md-4">
                    <label for="trc_corebundle_utilisateur_image" >
                      <img id="img-update" src="{{asset(form.vars.value.image)}} " style="display:inline-block;width:100%;">
                    </label>
                    {{form_widget(form.image,{'attr':{'class':'hide load-image'}})}}
                    </div>
                  <div class="col-md-8">
                    
                    <div class="form-group">
                      <label for="exampleInputEmail1">Nom</label>
                      
                      {{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Prenom</label>
                      {{form_widget(form.prenom,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Email</label>
                      <div class="input-group">
                      <div class="input-group-addon">
                        <i class="fa fa-at"></i>
                      </div>
                      {{form_widget(form.email,{'attr':{'class':'form-control'}})}}
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Téléphone</label>
                      <div class="input-group">
                      <div class="input-group-addon">
                        <i class="fa fa-phone"></i>
                      </div>
                      {{form_widget(form.telephone,{'attr':{'class':'form-control','data-inputmask':'"mask": "+(999) 99 999 99 99"','data-mask':'' }})}}
                      </div>
                    </div>
                    
                    
                      {{form_widget(form.societe,{'attr':{'class':'form-control hide','readonly':'readonly'}})}}
                     
                    


                  </div>
                  </div>
                </div>
                
              <!-- /.box-body -->

              <div class="box-footer">
                {{form_widget(form.save,{'attr':{'class':'btn btn-primary'}})}}
              </div>
           	{{form_end(form)}}
          </div>


        </div>
        
</div>
{%endblock%}

{%block script%}
<script type="text/javascript">
	activeLink("ajout-employe");
  $(document).ready(function(){
    
  });
</script>
{%endblock script%}