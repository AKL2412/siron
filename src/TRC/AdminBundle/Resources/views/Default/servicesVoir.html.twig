{%extends 'TRCAdminBundle::Default/services.html.twig'%}
{%block title%}
{{parent()}}
| {{entite.code}}
{%endblock%}
{%block position %}
  {{parent()}}
          <li >
          	<a href="{{url('trc_admin_services_voir',{code:entite.code})}} ">
              <i class="fa-tags fa"></i>
          		{{entite.code}}
          	</a>
          </li>
{%endblock position%}
{%block titrepage%}
    {{entite.nom}} 
{%endblock titrepage%}
 {%block avancement%}     
 {%endblock avancement%}     
{%block content%}
<div class="row">
	<div class="col-lg-12">
	<div class="box box-success">
                <div class="box-header with-border">
                  <h3 class="box-title">Les Utilisateurs de {{entite.nom}} </h3>

                  <div class="box-tools pull-right">
                    <span class="label label-danger">{{postes.getTotalItemCount}} utilisateur(s)</span>
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                    </button>
                    
                  </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
		{%for p in postes %}
			<div class="col-md-6">
				{{render(controller('TRCCoreBundle:Affichage:presentEmploye',{employe:p}))}}
			</div>
		{%endfor%}
		</div>
		</div>
	</div>
	<div class="navigation">
                    {{ knp_pagination_render(postes) }}
                  </div>
</div>

{%endblock content%}