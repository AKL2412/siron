{%extends '::layout.html.twig'%}
{%block title%}
{{parent()}}
| Applications
{%endblock%}
{%block position %}
  {{parent()}}
          <li >
          	<a href="{{url('trc_admin_services')}} ">
              <i class="fa-gg fa"></i>
          		Applications
          	</a>
          </li>
{%endblock position%}
{%block titrepage%}
    Applications 
{%endblock titrepage%}
 {%block avancement%}     
 {%endblock avancement%}     
{%block content%}
<div class="row">
    <div class="col-md-5 col-md-offset-2-">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Ajouter une application</h3>
              <div class="box-tools pull-right">
              <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
          
            {{form_start(form)}}
           
              <div class="box-body">
                  
                
                    <div class="form-group">
                      <label for="exampleInputEmail1">Nom</label>
                      
                      {{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Lien</label>
                      
                      {{form_widget(form.lien,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Publier ?
                      {{form_widget(form.active)}}
                      </label>
                      
                    </div>
                  
                
                <div class="form-group">

                  <label for="exampleInputFile">Détails</label>
                  {{form_widget(form.detail,{'attr':{'class':'form-control'}})}}
                </div>

              <div class="box-footer">
                {{form_widget(form.save,{'attr':{'class':'btn btn-primary'}})}}
              </div>
            {{form_end(form)}}
          </div>


        </div>
</div>
   <div class="col-md-7">
    <div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Les applications</h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
      </button>
      <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
      </div>
  </div>
           
  <div class="box-body">
  <div>
    <table class="table">
      <tr>
        <th></th>
        <th>{{ knp_pagination_sortable(pagination, 'Nom', 'a.nom') }}</th>
       
        <th>{{ knp_pagination_sortable(pagination, "Date d'ajout", ['a.at']) }}</th>
      </tr>
        {% for a in pagination %}
          <tr>
            <td>
              {%if not a.active %}
                <i class="fa-times fa text-danger"></i>
              {%else%}
                <i class="fa-check-square fa text-success"></i>
              {%endif%}
            </td>
            <td>
             <a href="{{url('trc_admin_apps_modif',{id:a.id})}} ">
              {{a.nom}}
              </a>
            </td>
        
             
            <td>{{ a.at | date('m-d-y H:i') }}</td>
          </tr>
        {% endfor %}
    </table>
    <div class="navigation">
      {{ knp_pagination_render(pagination) }}
    </div>
  </div>
  <div class="box-footer text-center">
    {{ pagination.getTotalItemCount }} entité(s) 
  </div>
</div>
  </div>     
</div>
<div class="row">
  
</div>
{%endblock%}
{%block script%}
<script type="text/javascript">
    activeLink("apps")
</script>
{%endblock script%}