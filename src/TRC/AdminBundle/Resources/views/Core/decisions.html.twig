{%extends '::layout.html.twig'%}
{%block title%}
{{parent()}}
| Les décisions
{%endblock%}
{%block position %}
          <li >
          	<a href="{{url('trc_admin_decisions')}} ">
          		<i class="fa-legal fa" ></i>
          		Decisions
          	</a>
          </li>
{%endblock position%}
{%block titrepage%}
    Définition des décisions
{%endblock titrepage%}     
{%block content%}
<div class="row">
	<div class="col-md-6">
		<div class="box box-success">
			<div class="box-header with-border">
				<h3 class="box-title">
				{{pagination.getTotalItemCount}}	Décision(s) 
				</h3>
			</div>			           
		  	<div class="box-body">
		  		<table class="table">
		  			<thead>
		  				<tr>
		  					<th> </th>
		  					<th>Code</th>
		  					<th>Nom</th>
		  				</tr>
		  			</thead>
		  			<tbody>
		  				{%for d in pagination %}
		  					<tr>
		  						<td>{{d.id}}</td>
		  						<td>{{d.code}} </td>
		  						<td>{{d.nom}} </td>
		  					</tr>
		  				{%endfor%}
		  			</tbody>
		  		</table>
		  		<div class="navigation">
			      {{ knp_pagination_render(pagination) }}
			    </div>
		  	</div>
		</div>
	</div>
	<div class="col-md-6">
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">Ajouter une décision </h3>
			</div>			           
		  	<div class="box-body">
		  	{{form_start(form)}}
		  		<div class="form-group">
		            <label for="exampleInputEmail1">Nom</label>
		                {{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
		        </div>
		        <div class="form-group">
		            <label for="exampleInputEmail1">Code</label>
		                {{form_widget(form.code,{'attr':{'class':'form-control'}})}}
		        </div>
		  	{{form_end(form)}}
			</div>
		</div>
	</div>
</div>
{%endblock content%}
{%block script%}
<script type="text/javascript">
    activeLink("decisions")
</script>
{%endblock script%}