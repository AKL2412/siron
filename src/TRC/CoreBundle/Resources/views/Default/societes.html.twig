{%extends '::layout.html.twig'%}
{%block title%}
{{parent()}}
| Sociétés
{%endblock%}
{%block titrepage%}
    Les sociétés
{%endblock titrepage%}
{%block position %}
    <li>
        <a href="{{url('trc_core_societe')}}">
            <i class="fa fa-bank"></i> Sociétés
        </a>
    </li>
{%endblock position%}
{%block content%}

<div class="row">
		<div class="col-md-8 col-md-offset-2-">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Ajouter une société</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
          
            {{form_start(form)}}
            <form role="form">
              <div class="box-body">

                <div class="row">
                  <div class="col-md-4">
                    <label for="trc_corebundle_societe_image" >
                      <img id="img-update" src="{{asset(form.vars.value.image)}} " style="display:inline-block;width:100%;">
                    </label>
                    {{form_widget(form.image,{'attr':{'class':'hide load-image'}})}}
                  </div>
                  <div class="col-md-8">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Nom de la société</label>
                      
                      {{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Code</label>
                      {{form_widget(form.code,{'attr':{'class':'form-control'}})}}
                    </div>
                  </div>
                </div>
                
                <div class="form-group">

                  <label for="exampleInputFile">Description</label>
                  {{form_widget(form.description,{'attr':{'class':'form-control textarea'}})}}
                </div>
                
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                {{form_widget(form.save,{'attr':{'class':'btn btn-primary'}})}}
              </div>
           	{{form_end(form)}}
          </div>


        </div>
        <div class="col-md-4">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Les sociétés</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <ul class="products-list product-list-in-box">
                {%for s in societes %}
                  <li class="item">
                    <div class="product-img">
                      <img src="{{asset(s.image)}}" alt="Product Image">
                    </div>
                    <div class="product-info">
                      <a href="{{url('trcsdc_homepage',{scte:s.code})}} " class="product-title">{{s.nom}}
                        <span class="label label-info pull-right">{{s.code}}</span></a>
                          <span class="product-description">
                            {{s.description|slice(0,38)|raw}}
                          </span>
                    </div>
                  </li>
                {%endfor%}
              </ul>
            </div>
            <!-- /.box-body -->
            <div class="box-footer text-center">
              {{societes|length}} société(s)
            </div>
            <!-- /.box-footer -->
          </div>
        </div>
</div>
{%endblock%}

{%block script%}
<script type="text/javascript">
	activeLink("societes");
 
</script>
{%endblock script%}